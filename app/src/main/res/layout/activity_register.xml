<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:backgroundTint="@android:color/background_light"

    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/background"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="531dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/custom"
        android:backgroundTint="@color/white">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:text="ĐĂNG KÝ HỆ THỐNG"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />


        <EditText
            android:maxLength="15"
            android:id="@+id/editTextTen"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/custom_edittext"
            android:hint="Nhập tên tài khoản"
            android:padding="15dp" />
        <EditText
            android:id="@+id/editTextNamSinh"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="310dp"
            android:background="@drawable/custom_edittext"
            android:hint="Nhập năm sinh"
            android:padding="15dp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="160dp"
            app:passwordToggleEnabled="true">
            <android.support.design.widget.TextInputEditText
                android:inputType="textPassword"
                android:id="@+id/editTextMatKhau"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:hint="Nhập password"
                android:padding="15dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="230dp"

            app:passwordToggleEnabled="true">
            <android.support.design.widget.TextInputEditText
                android:inputType="textPassword"
                android:id="@+id/editTextMatKhauMoi"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:hint="Xác nhận password mới"
                android:padding="15dp" />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/buttonDangNhap"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="380dp"
            android:background="@drawable/custom_button"
            android:backgroundTint="@color/black"
            android:text="Đăng ký"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txtDangKy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="405dp"
            android:text="Trở về "
            android:textColor="@drawable/mauchu" />
    </RelativeLayout>


</RelativeLayout>