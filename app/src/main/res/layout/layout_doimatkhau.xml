<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/background_light"

  >
<ImageView
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/background"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="531dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/custom"
        android:backgroundTint="@color/white">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:text="Đổi mật khẩu"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="90dp"
            android:id="@+id/textinputmkcu"
            app:passwordToggleEnabled="true">
            <android.support.design.widget.TextInputEditText


                android:inputType="textPassword"
                android:id="@+id/editTextMatKhauCu"
                android:layout_width="330dp"
                android:layout_height="wrap_content"

                android:background="@drawable/custom_edittext"
                android:hint="Nhập password cũ"
                android:padding="15dp" />
        </android.support.design.widget.TextInputLayout>

<android.support.design.widget.TextInputLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="170dp"
    android:id="@+id/textinputmkmoi"

    app:passwordToggleEnabled="true">
        <android.support.design.widget.TextInputEditText


            android:inputType="textPassword"
            android:id="@+id/editTextMatKhauMoi"
            android:layout_width="330dp"
            android:layout_height="wrap_content"

            android:background="@drawable/custom_edittext"
            android:hint="Nhập password mới"
            android:padding="15dp" />
</android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="250dp"
            app:passwordToggleEnabled="true">
            <android.support.design.widget.TextInputEditText


                android:inputType="textPassword"
                android:id="@+id/editTextMatKhauxacnhan"
                android:layout_width="330dp"
                android:layout_height="wrap_content"

                android:background="@drawable/custom_edittext"
                android:hint="Xác nhận password mới"
                android:padding="15dp" />
        </android.support.design.widget.TextInputLayout>



        <Button
            android:id="@+id/buttonLuu"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="360dp"
            android:background="@drawable/custom_button"
            android:backgroundTint="@color/black"
            android:text="Lưu"
            android:textColor="@color/white" />


    </RelativeLayout>


</RelativeLayout>