<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhieuMuonActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarPhieuMuon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lvPhieuMuon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgThemPhieuMuon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="288dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lvPhieuMuon"
        app:srcCompat="@drawable/ic_baseline_add_circle_outline_24" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomnagivation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="655dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:itemTextColor="@color/black"
        app:menu="@menu/bottom_menu" />
</android.support.constraint.ConstraintLayout>